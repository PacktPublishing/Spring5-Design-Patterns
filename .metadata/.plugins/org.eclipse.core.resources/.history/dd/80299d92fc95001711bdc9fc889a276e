package com.packt.patterninspring.chapter11.web.reactive.function;

import java.util.HashMap;
import java.util.Map;

import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

/**
 * @author Arjen Poutsma
 */
public class AccountRepository implements PersonRepository {

	private final Map<Integer, Account> people = new HashMap<>();

	public AccountRepository() {
		this.people.put(1, new Account("John Doe", 42));
		this.people.put(2, new Account("Jane Doe", 36));
	}

	@Override
	public Mono<Account> getPerson(int id) {
		return Mono.justOrEmpty(this.people.get(id));
	}

	@Override
	public Flux<Account> allPeople() {
		return Flux.fromIterable(this.people.values());
	}

	@Override
	public Mono<Void> savePerson(Mono<Account> personMono) {
		return personMono.doOnNext(person -> {
			int id = people.size() + 1;
			people.put(id, person);
			System.out.format("Saved %s with id %d%n", person, id);
		}).thenEmpty(Mono.empty());
	}
}
